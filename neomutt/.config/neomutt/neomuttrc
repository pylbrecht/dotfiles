# vim: syntax=neomuttrc

source ~/.config/neomutt/colors
source ~/.config/neomutt/mappings

source ~/.config/neomutt/accounts/momox
folder-hook $folder 'source ~/.config/neomutt/accounts/momox'

# index
set date_format = "%Y/%m/%d"
set index_format = "[%Z] %D %F %s"
set sort = threads
set sort_aux = reverse-last-date-received

# view html mails using lynx
auto_view text/html
set mailcap_path = "~/.config/neomutt/mailcap"

# status bar
set status_chars  = " *%A"
set status_format = "───[ %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# sidebar
set sidebar_visible = yes
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set sidebar_divider_char = " │"
set mail_check_stats
set sidebar_width = 25

set header_cache = ~/.cache/neomutt

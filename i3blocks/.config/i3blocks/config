# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks

# Global properties
separator=false
separator_block_width=5

[pomodoro]
command=~/.config/i3blocks/blocklets/pomodoro/pomodoro
interval=1

[spacer]
full_text=" "

[battery]
command=~/.config/i3blocks/blocklets/battery/battery
markup=pango
interval=30

[spacer]
full_text=" "

[wifi]
command=~/.config/i3blocks/blocklets/wifi/ssid
INTERFACE=wlp0s20f3
interval=30
markup=pango
label=<span color="#d79921"> </span>

[spacer]
full_text=" "

[key_layout]
command=setxkbmap -query | grep layout | awk '{ print $2 }'
label=<span color="#d79921" font_weight="bold"> </span>
interval=30
markup=pango
align=center

[spacer]
full_text=" "

[date]
command=date '+%a %d.%m.%Y'
interval=60
label=<span color="#d79921"> </span>
markup=pango

[spacer]
full_text=" "

[time]
command=date '+%H:%M'
interval=60
label=<span color="#d79921"> </span>
markup=pango

[arch-logo]
full_text=<span font_weight="bold" size="xx-large"> </span>
markup=pango
color=#d79921
min_width=50
align=right
